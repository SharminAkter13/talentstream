{
  "info": {
    "_postman_id": "d4e6b7d4-1f22-4a72-a813-0c9f7e912345",
    "name": "TalentStream API - Full CRUD & Portal",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000/api" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "1. PUBLIC ROUTES",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/register",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"User\",\n  \"email\": \"test@email.com\",\n  \"password\": \"password\",\n  \"password_confirmation\": \"password\",\n  \"role_id\": 2\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) {",
                  "  pm.collectionVariables.set('token', json.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              { "key": "Accept", "value": "application/json" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "url": "{{base_url}}/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@email.com\",\n  \"password\": \"password\"\n}"
            }
          }
        },
        {
          "name": "Portal Index",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/"
          }
        }
      ]
    },
    {
      "name": "2. EMPLOYER JOB CRUD (Dashboard)",
      "item": [
        {
          "name": "A. Get Dropdowns (The Missing One)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "url": "{{base_url}}/employer/jobs/create",
            "description": "Fetches Categories, Locations, and Job Types for React Select inputs."
          }
        },
        {
          "name": "B. Create Job (Dashboard)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Accept", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Senior Developer\",\n  \"category_id\": 1,\n  \"job_location_id\": 1,\n  \"job_type_id\": 1,\n  \"description\": \"Job description content\",\n  \"status\": \"active\",\n  \"closing_date\": \"2024-12-31\"\n}"
            },
            "url": "{{base_url}}/employer/jobs"
          }
        },
        {
          "name": "C. List My Jobs",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/employer/jobs"
          }
        },
        {
          "name": "D. Update Job",
          "request": {
            "method": "PUT",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"status\": \"inactive\"\n}"
            },
            "url": "{{base_url}}/employer/jobs/1"
          }
        },
        {
          "name": "E. Delete Job",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/employer/jobs/1"
          }
        },
        {
          "name": "F. Post Job (Portal Quick Post)",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/employer/post-job",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Portal Post\",\n  \"description\": \"Quick description\"\n}"
            }
          }
        }
      ]
    },
    {
      "name": "3. ADMIN TABLE CRUD",
      "item": [
        {
          "name": "Categories: List All",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/categories"
          }
        },
        {
          "name": "Categories: Create",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "body": {
              "mode": "raw",
              "raw": "{\"name\": \"Technology\", \"is_active\": 1}"
            },
            "url": "{{base_url}}/admin/categories"
          }
        },
        {
          "name": "Locations: List All",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/admin/job-locations"
          }
        }
      ]
    },
    {
      "name": "4. MESSAGING & NOTIFICATIONS",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/chat",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }]
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/chat/send",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"receiver_id\": 2, \"message\": \"Hello\"}"
            }
          }
        }
      ]
    },
    {
      "name": "5. Notifications",
      "item": [
        {
          "name": "List All Notifications",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/notifications"
          }
        },
        {
          "name": "Mark Notification As Read",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/notifications/1/read"
          }
        },
        {
          "name": "Mark All Notifications As Read",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/notifications/read-all"
          }
        },
        {
          "name": "Delete Notification",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/notifications/1"
          }
        }
      ]
    },
    {
      "name": "6. Messaging (Chat)",
      "item": [
        {
          "name": "List Conversations",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/chat"
          }
        },
        {
          "name": "Get Contacts",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/chat/contacts"
          }
        },
        {
          "name": "Get Messages By Contact",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/chat/messages/2"
          }
        },
        {
          "name": "Send Message",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"receiver_id\": 2, \"message\": \"Hello from Postman\"}"
            },
            "url": "{{base_url}}/chat/send"
          }
        },
        {
          "name": "Mark Conversation As Read",
          "request": {
            "method": "POST",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/chat/1/read"
          }
        }
      ]
    },
    {
      "name": "7. Bookmarks & View Tracking",
      "item": [
        {
          "name": "List Bookmarks",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
            "url": "{{base_url}}/bookmarks"
          }
        },
        {
          "name": "Add Bookmark",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\"job_id\": 123}"
            },
            "url": "{{base_url}}/bookmarks"
          }
        },
        {
          "name": "Track Job View",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
