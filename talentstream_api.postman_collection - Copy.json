{
  "info": {
    "_postman_id": "d4e6b7d4-1f22-4a72-a813-0c9f7e912345",
    "name": "TalentStream API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },

  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],

  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },

  "item": [
    {
      "name": "AUTH",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/register",
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\":\"Sharmin User\",\n    \"email\":\"test@example.com\",\n    \"password\":\"123456\",\n    \"password_confirmation\":\"123456\",\n    \"role_id\": 2\n}"
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) {",
                  "   pm.collectionVariables.set('token', json.token);",
                  "   console.log('Token saved:', json.token);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "url": "{{base_url}}/login",
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"123456\"\n}"
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/logout"
          }
        },
        {
          "name": "Authenticated User",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/user"
          }
        }
      ]
    },

    {
      "name": "PUBLIC PORTAL",
      "item": [
        {
          "name": "Homepage",
          "request": { "method": "GET", "url": "{{base_url}}/" }
        },
        {
          "name": "Browse Jobs",
          "request": { "method": "GET", "url": "{{base_url}}/browse-jobs" }
        },
        {
          "name": "Browse Categories",
          "request": { "method": "GET", "url": "{{base_url}}/browse-categories" }
        },
        {
          "name": "Job Details",
          "request": { "method": "GET", "url": "{{base_url}}/jobs/1" }
        }
      ]
    },

    {
      "name": "PROTECTED (api.auth)",
      "item": [
        {
          "name": "Profile",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/profile"
          }
        },
        {
          "name": "Notifications",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/notifications"
          }
        },
        {
          "name": "Bookmarks",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/bookmarks"
          }
        }
      ]
    },

    {
      "name": "ADMIN (role:1)",
      "item": [
        {
          "name": "Dashboard",
          "request": { "method": "GET", "url": "{{base_url}}/admin/dashboard" }
        },
        {
          "name": "All Users",
          "request": { "method": "GET", "url": "{{base_url}}/admin/users" }
        },
        {
          "name": "Categories",
          "request": { "method": "GET", "url": "{{base_url}}/admin/categories" }
        }
      ]
    },

    {
      "name": "EMPLOYER (role:2)",
      "item": [
        {
          "name": "Dashboard",
          "request": { "method": "GET", "url": "{{base_url}}/employer/dashboard" }
        },
        {
          "name": "Manage Jobs",
          "request": { "method": "GET", "url": "{{base_url}}/employer/manage-jobs" }
        },
        {
          "name": "Post Job",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/employer/post-job",
            "body": { "mode": "raw", "raw": "{\n  \"title\": \"Job ABC\",\n  \"description\": \"Job Description\"\n}" }
          }
        }
      ]
    },

    {
      "name": "CANDIDATE (role:3)",
      "item": [
        {
          "name": "Dashboard",
          "request": { "method": "GET", "url": "{{base_url}}/candidate/dashboard" }
        },
        {
          "name": "Apply Job",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/candidate/jobs/1/apply"
          }
        }
      ]
    }
  ]
}
